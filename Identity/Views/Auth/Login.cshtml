@model LoginViewModel

<link rel="stylesheet" href="./css/site.css" />

<div class="outer" style="height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; margin-top: 200px;">
    <div class="content shadow-lg" style="width: 450px; border-radius: 10px; padding: 50px 40px ">
        <h2 class="text-center">Авторизация</h2>
        <form asp-action="Login" asp-controller="Auth" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <input class="form-control" asp-for="UserName" placeholder="Login"/>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Пароль"/>
            </div>
            <button class="btn btn-primary">Войти</button>
            
        </form>
    </div>
</div>


